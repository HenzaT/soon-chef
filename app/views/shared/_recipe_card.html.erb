<% recipes.each do |recipe| %>
  <div class="card">
    <%= link_to recipe_path(recipe) do %>
        <h2 class="card-title"><%= recipe.name %></h2>
        <img src="<%= recipe.image %>" alt="" class="card-image">
        <p class="card-rating"><%= recipe.rating %></p>
    <% end %>
    <%= button_to recipe_path(recipe), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'},class: 'delete-btn' do %>
      <i class="fa-regular fa-trash-can"></i>
    <% end%>
  </div>
<% end %>
