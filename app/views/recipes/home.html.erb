<div class="home">
  <h1>Welcome to Soon Chef</h1>
  <h3>Add your favourite recipes</h3>
  <h3>Keep them all in one place</h3>
  <div class="button-group">
    <% if user_signed_in? %>
      <%= link_to edit_user_registration_path do %>
          <button class="devise-btn edit">EDIT DETAILS</button>
      <% end %>
      <%= link_to destroy_user_session_path, data: { turbo_method: :delete }  do %>
        <button class="devise-btn logout">LOGOUT</button>
      <% end %>
    <% else %>
      <%= link_to new_user_registration_path do %>
        <button class="devise-btn register">GET STARTED</button>
      <% end %>
      <%= link_to new_user_session_path do %>
        <button class="devise-btn login">SIGN IN</button>
      <% end %>
    <% end %>
  </div>
</div>
